---
import { getI18N } from "@/i18n";
import { getCollection } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";
import { parseStringPromise } from "xml2js";
import SectionContainer from "../portfolio/SectionContainer.astro";
import ThemeIcon from "@/components/ThemeIcon.astro";
import LanguagePicker from "@/components/LanguagePicker.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils.ts";

import discord from "@/assets/social/discord.svg";
import facebook from "@/assets/social/facebook.svg";
import github from "@/assets/social/github.svg";
import instagram from "@/assets/social/instagram.svg";
import linkedin from "@/assets/social/linkedin.svg";
import tiktok from "@/assets/social/tiktok.svg";
import x from "@/assets/social/x.svg";
import youtube from "@/assets/social/youtube.svg";

import avatar from "@/assets/avatar.png";

import mainBorder from "@/assets/main-border.svg";
import lineH1 from "@/assets/lines/line-horizontal-1.svg";
import lineH2 from "@/assets/lines/line-horizontal-2.svg";
import lineH3 from "@/assets/lines/line-horizontal-3.svg";
import lineH4 from "@/assets/lines/line-horizontal-4.svg";
import lineH5 from "@/assets/lines/line-horizontal-5.svg";
import lineVertical from "@/assets/lines/line-vertical.svg";
import BentoLayout from "@/layouts/BentoLayout.astro";
import squareDraw from "@/assets/square-draw.svg";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

// blog
const NUMBER_LAST_POSTS = 4;

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, NUMBER_LAST_POSTS);

// youtube videos
const ID_CHANNEL_PRIMARY = "UCKMWXwHYoy920OFEN_BM5VQ";
const ID_CHANNEL_SECONDARY = "UCRC7LM5vAZMxS8LSo0PKZng";
const NUMBER_LAST_YT_VIDEOS = 3;

const feedUrl = (id: string) =>
  `https://www.youtube.com/feeds/videos.xml?channel_id=${id}`;

async function loadFeed(feedUrl: string) {
  const response = await fetch(feedUrl);
  const xmlData = await response.text();
  const jsonData = await parseStringPromise(xmlData);
  return jsonData.feed.entry
    .map((entry: any) => ({
      title: entry.title[0],
      link: entry.link[0].$.href,
      // published: entry.published[0],
      // No thumbnail in standard feed, would need media group parsing or hardcoded defaults/logic
      // For now we will use a placeholder or check if we can extract it if needed,
      // but design shows specific placeholders or none.
      // The design has thumbnails. Standard RSS has media:group > media:thumbnail
      thumbnail:
        entry["media:group"]?.[0]["media:thumbnail"]?.[0]?.$.url ||
        "/images/default-video.jpg",
    }))
    .slice(0, NUMBER_LAST_YT_VIDEOS);
}

// Combine videos from both channels or just prioritize primary?
// Design shows 3 videos. Let's fetch both and combine/slice or just primary if enough.
// Let's try to get a mix or just primary for now to match the "Videos recientes" block count.
let allVideos = [];
try {
  const primaryVideos = (await loadFeed(feedUrl(ID_CHANNEL_PRIMARY))) as any[];
  allVideos = [...primaryVideos];

  if (allVideos.length < 3) {
    const secondaryVideos = (await loadFeed(
      feedUrl(ID_CHANNEL_SECONDARY),
    )) as any[];
    allVideos = [...allVideos, ...secondaryVideos];
  }
} catch (e) {
  console.error("Error loading videos", e);
}
// Ensure we have exactly 3 for the design if possible
const videos = allVideos.slice(0, 3);

const projects = i18n.PORTFOLIO.PROJECTS_LIST.slice(0, 3);
---

<BentoLayout title="Doneber" description={i18n.HOME.SHORT_DESCRIPTION}>
  <main>
    <div class="container">
      <div class="bio box">
        <div class="bio-content">
          <h1>@doneber</h1>
          <p class="bio-text">
            {i18n.HOME.SHORT_DESCRIPTION}
            <br />
            {i18n.ABOUT.DESCRIPTION}
          </p>
          <a href="mailto:contact@doneber.dev" class="contact-btn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
            >
            Contact me
          </a>
        </div>
        <div class="bio-image">
          <img src={avatar.src} alt="Avatar" width="80" />
        </div>
        <a href="/about" class="see-more">Ver mas ↗</a>
      </div>

      <div class="Menu box">
        <div class="theme-toggle">
          <LanguagePicker />
          <ThemeIcon />
        </div>
        <nav>
          <a href={translatePath("/blog")}>{t("nav.blog")} ↗</a>
          <a href={translatePath("/about")}>{t("nav.about")} ↗</a>
          <a href={translatePath("/portfolio")}>{t("nav.portfolio")} ↗</a>
        </nav>
      </div>

      <div class="Projects box">
        <h2>Mis proyectos</h2>
        <div class="project-list">
          {
            projects.map((project) => (
              <a href={project.URL} target="_blank" class="project-item">
                <img
                  src={project.LOGO_PATH}
                  alt={project.PROJECT_NAME}
                  style={`background-image: url(${squareDraw.src})`}
                />
                <span>{project.PROJECT_NAME}</span>
              </a>
            ))
          }
        </div>
        <a href="/portfolio" class="see-more">Ver más ></a>
      </div>

      <div class="blog box">
        <h2>Últimos post's</h2>
        <ul class="post-list">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <span class="post-title">- {post.data.title}</span>
                  <span class="post-date">
                    <FormattedDate date={post.data.pubDate} />
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
        <a href="/blog" class="see-more">Ver más ></a>
      </div>

      <div class="videos box">
        <h2>Videos recientes</h2>
        <div class="video-list">
          {
            videos.map((video) => (
              <a href={video.link} target="_blank" class="video-item">
                <div
                  class="video-thumb"
                  style={`background-color: #222; background-image: url(${video.thumbnail || ""}); background-size: cover;`}
                />
                <span class="video-title">{video.title}</span>
              </a>
            ))
          }
        </div>
        <a href="https://youtube.com/@doneber" target="_blank" class="see-more"
          >Ver más ></a
        >
      </div>

      <div class="Footer box">
        <p>Todos los derechos reservados (y los izquierdos también :))</p>
      </div>

      <div class="Social box">
        <h2>Mis Redes Sociales</h2>
        <div class="social-grid">
          <a
            href="https://youtube.com/@doneber"
            target="_blank"
            aria-label="YouTube"
          >
            <img src={youtube.src} width="32" height="32" alt="YouTube" />
            <span>YouTube</span>
          </a>
          <a href="https://facebook.com" target="_blank" aria-label="Facebook">
            <img src={facebook.src} width="32" height="32" alt="Facebook" />
            <span>Facebook</span>
          </a>
          <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
            <img src={linkedin.src} width="32" height="32" alt="LinkedIn" />
            <span>LinkedIn</span>
          </a>
          <a
            href="https://github.com/doneber"
            target="_blank"
            aria-label="GitHub"
          >
            <img src={github.src} width="32" height="32" alt="GitHub" />
            <span>GitHub</span>
          </a>
          <a
            href="https://tiktok.com/@doneberdev"
            target="_blank"
            aria-label="TikTok"
          >
            <img src={tiktok.src} width="32" height="32" alt="TikTok" />
            <span>TikTok</span>
          </a>
          <a
            href="https://twitter.com/@doneberdev"
            target="_blank"
            aria-label="Twitter"
          >
            <img src={x.src} width="32" height="32" alt="Twitter" />
            <span>Twitter</span>
          </a>
          <a
            href="https://instagram.com/doneberdev"
            target="_blank"
            aria-label="Instagram"
          >
            <img src={instagram.src} width="32" height="32" alt="Instagram" />
            <span>Instagram</span>
          </a>
          <a
            href="https://discord.com/invite/5ak7sZpC4t"
            target="_blank"
            aria-label="Discord"
          >
            <img src={discord.src} width="32" height="32" alt="Discord" />
            <span>Discord</span>
          </a>
        </div>
      </div>
    </div>
  </main>
</BentoLayout>

<style
  define:vars={{
    mainBorder: `url("${mainBorder.src}")`,
    lineH1: `url("${lineH1.src}")`,
    lineH2: `url("${lineH2.src}")`,
    lineH3: `url("${lineH3.src}")`,
    lineH4: `url("${lineH4.src}")`,
    lineH5: `url("${lineH5.src}")`,
    lineVertical: `url("${lineVertical.src}")`,
  }}
>
  :root {
    --bg-page: #fcfcfc;
    --bg-container: #ffffff;
    --border-color: #000000;
    --text-color: #000000;
    --accent-blue: #0066cc;
    --box-bg: transparent;
    --hover-bg: #f0f0f0;
  }

  :global(.dark) :root {
    --bg-page: #161e33;
    --bg-container: #10151d;
    --border-color: #4a5568;
    --text-color: #ffffff;
    --accent-blue: #60a5fa;
    --hover-bg: #1e293b;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  /* Import a handwriting font if possible, or assume it's applied globally? 
     The current design looks like it uses a specific handwritten font. 
     I'll use a generic cursive/handwritten stack or just sans-serif if not available.
     The user has not provided a font, so I will stick to system fonts but styled cleanly.
  */

  .container {
    display: grid;
    grid-template-columns: 1.3fr 0.7fr;
    grid-template-rows: auto;
    gap: 0;
    /* border: 24px solid transparent;
    border-image: var(--mainBorder) 32 round; */
    overflow: hidden;
  }

  .box {
    padding: 1.5rem;
    border-bottom: none;
    border-right: none;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  /* Unique SVG borders for each box - no repetition */
  .bio {
    background-image: var(--lineH1), var(--lineVertical);
    background-repeat: no-repeat;
    background-position: bottom, right;
    background-size:
      100% auto,
      auto 100%;
  }

  .Menu {
    background-image: var(--lineH2);
    background-repeat: no-repeat;
    background-position: bottom;
    background-size: 100% auto;
  }

  .Projects {
    background-image: var(--lineH3);
    background-repeat: no-repeat;
    background-position: bottom;
    background-size: 100% auto;
  }

  .blog {
    background-image: var(--lineH4), var(--lineVertical);
    background-repeat: no-repeat;
    background-position: bottom, right;
    background-size:
      100% auto,
      auto 100%;
  }

  .videos {
    background-image: var(--lineVertical);
    background-repeat: no-repeat;
    background-position: right;
    background-size: auto 100%;
  }

  .Social {
    background-image: var(--lineH5);
    background-repeat: no-repeat;
    background-position: bottom;
    background-size: 100% auto;
  }

  /* Grid Areas */
  .container {
    grid-template-areas:
      "bio Menu"
      "bio Projects"
      "blog Projects"
      "blog Social"
      "videos Social"
      "videos Footer";
  }

  .bio {
    grid-area: bio;
  }
  .Menu {
    grid-area: Menu;
  }
  .Projects {
    grid-area: Projects;
  }
  .blog {
    grid-area: blog;
  }
  .videos {
    grid-area: videos;
  }
  .Footer {
    grid-area: Footer;
  }
  .Social {
    grid-area: Social;
  }

  /* Bio Section */
  .bio {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }
  .bio-content {
    flex: 1;
  }
  .bio h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    font-weight: bold;
  }
  .bio-text {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 2rem;
    max-width: 90%;
  }
  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--text-color);
    color: var(--bg-container);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.1s;
  }
  .contact-btn:hover {
    transform: scale(1.05);
  }
  .bio-image {
    padding: 1rem;
    background: transparent;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    align-items: center;
    min-height: 50%;
    transform: rotate(-4deg);
  }
  .see-more {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    font-size: 0.9rem;
    color: var(--accent-blue);
    text-decoration: none;
    font-weight: bold;
  }

  /* Menu Section */
  .Menu {
    padding: 1rem 1.5rem;
    max-height: 200px;
    justify-content: space-between;
  }
  .theme-toggle {
    text-align: right;
    font-weight: bold;
    margin-bottom: 0.5rem;
    cursor: pointer;
  }
  .Menu nav {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  .Menu nav a {
    text-decoration: none;
    color: var(--accent-blue);
    font-size: 1.2rem;
    font-weight: bold;
  }
  .Menu nav a:hover {
    text-decoration: underline;
  }

  /* Projects Section */
  .Projects {
    grid-row: span 2; /* Adjust spanning based on content */
  }
  .Projects h2,
  .blog h2,
  .videos h2,
  .Social h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    font-weight: bold;
  }
  .project-list {
    display: flex;
    justify-content: space-around;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .project-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    width: 80px;
    text-align: center;
  }
  .project-item img {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    margin-bottom: 0.5rem;
    object-fit: cover;
    /* background: var(--hover-bg); */
    background-repeat: no-repeat;
    background-size: cover;
    padding: 7px;
  }
  .project-item span {
    font-size: 0.8rem;
    font-weight: bold;
  }

  /* Blog Section */
  .blog .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .blog .post-list li {
    margin-bottom: 1rem;
  }
  .blog .post-list a {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .post-title {
    font-weight: bold;
    display: block;
  }
  .post-date {
    font-size: 0.85rem;
    color: #666;
    margin-left: 1rem;
  }

  /* Videos Section */
  .video-list {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }
  .video-item {
    flex: 1;
    min-width: 150px;
    text-decoration: none;
    color: inherit;
  }
  .video-thumb {
    width: 100%;
    aspect-ratio: 16/9;
    background-color: #000;
    border-radius: 12px;
    margin-bottom: 0.5rem;
  }
  .video-title {
    font-size: 0.8rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: bold;
  }

  /* Social Section */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    justify-items: center;
  }
  .social-grid a {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: inherit;
    text-decoration: none;
    font-size: 0.75rem;
    gap: 0.2rem;
  }
  .social-grid svg {
    border-radius: 8px; /* Some icons in design look like boxes (TikTok black box), others simple. */
    padding: 2px;
  }

  /* Specific styling adjustment for icons to match design "app icon" look */
  .social-grid a[aria-label="TikTok"] svg,
  .social-grid a[aria-label="GitHub"] svg,
  .social-grid a[aria-label="Instagram"] svg,
  .social-grid a[aria-label="LinkedIn"] svg,
  .social-grid a[aria-label="Facebook"] svg,
  .social-grid a[aria-label="Twitter"] svg,
  .social-grid a[aria-label="Discord"] svg,
  .social-grid a[aria-label="YouTube"] svg {
    /* Applying a generic shape for now, real icons might need specific coloring/backgrounds to match perfectly */
    border-radius: 6px;
  }

  /* Footer Section */
  .Footer {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    color: #666;
  }

  /* Responsive Adjustments */
  @media (max-width: 900px) {
    .container {
      grid-template-columns: 1fr;
      grid-template-areas:
        "bio"
        "Menu"
        "Projects"
        "blog"
        "videos"
        "Social"
        "Footer";
    }
    .box {
      border-right: none;
      /* border-bottom: 1px solid var(--border-color); */
    }
  }
</style>
