    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    font-weight: bold;
  }
  .project-list {
    display: flex;
    justify-content: space-around;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .project-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    width: 80px;
    text-align: center;
  }
  .project-item img {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    margin-bottom: 0.5rem;
    object-fit: cover;
    background: #eee;
