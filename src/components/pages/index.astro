    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #000;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.1s;
  }
  .contact-btn:hover {
    transform: scale(1.05);
  }
  .bio-image {
    padding: 1rem;
    background: transparent;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .see-more {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    font-size: 0.9rem;
    color: var(--accent-blue);
    text-decoration: none;
    font-weight: bold;
  }

  /* Menu Section */
  .Menu {
    padding: 1rem 1.5rem;
    max-height: 200px;
    justify-content: space-between;
  }
  .theme-toggle {
    text-align: right;
    font-weight: bold;
    margin-bottom: 0.5rem;
    cursor: pointer;
  }
  .Menu nav {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  .Menu nav a {
    text-decoration: none;
    color: var(--accent-blue);
    font-size: 1.2rem;
    font-weight: bold;
  }
  .Menu nav a:hover {
    text-decoration: underline;
  }

