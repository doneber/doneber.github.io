---
import { getI18N } from "@/i18n";
import SectionContainer from "../portfolio/SectionContainer.astro";
import Character from "@/components/Character.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Character messages={i18n.SETUP.CHARACTER_MESSAGES} isFixed />
<SectionContainer id="mi-setup">
  <h1>{i18n.SETUP.TITLE}</h1>
  <img src="/images/mi-setup-2023.webp" width="450" alt="mi setup 2023" />
  <ul>
    {
      i18n.SETUP.COMPONENTS.map((comp) => (
        <li>
          <strong>{comp.TITLE_COMPONENT}:</strong> {comp.DESCRIPTION_COMPONENT}
        </li>
      ))
    }
  </ul>
  <p>
    {i18n.SETUP.MESSAGE}
  </p>
</SectionContainer>
