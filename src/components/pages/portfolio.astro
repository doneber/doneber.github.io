---
import { getI18N } from "@/i18n";
import Hero from "@/components/portfolio/Hero.astro";
import SectionContainer from "../portfolio/SectionContainer.astro";
import Projects from "@/components/portfolio/Projects.astro";
import Experience from "@/components/portfolio/Experience.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<main>
  <SectionContainer>
    <Hero />
  </SectionContainer>
  <SectionContainer>
    <Experience />
  </SectionContainer>
  <SectionContainer>
    <Projects />
  </SectionContainer>
  <SectionContainer>
    <h2>{i18n.PORTFOLIO.ABOUT_TITLE}</h2>
    <p>{i18n.PORTFOLIO.ABOUT_DESCRIPTION}</p>
  </SectionContainer>
  <SectionContainer>
    <h2>{i18n.PORTFOLIO.CONTACT_TITLE}</h2>
    <p>
      <a href="mailto:contact@doneber.dev" target="_blank"
        >contact@doneber.dev</a
      >
    </p>
    <a href="https://flowcv.com/resume/eevk7vfmfl" target="_blank">CV</a>
  </SectionContainer>
</main>

<style>
  * {
    font-family: monospace;
  }

  html {
    /* Always dark mode */
    & body {
      background: linear-gradient(#161e33, #10151d);

      --var-primary-color-bg: #222;
      --var-primary-color-text: #eee;
      --primary: #9d77ea;
      a {
        color: #549eff;
      }
    }
  }

  @keyframes dotScroll {
    from {
      background-position-y: 0;
    }

    to {
      background-position-y: 100px;
    }
  }
</style>
