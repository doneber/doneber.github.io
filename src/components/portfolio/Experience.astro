---
import { getI18N } from "@/i18n";
import JobCard from "@/components/portfolio/JobCard.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<h2>{i18n.PORTFOLIO.EXPERIENCE_TITLE}</h2>
    <ul>
      {
        i18n.PORTFOLIO.EXPERIENCE_LIST.map((exp) => (
          <li>
            <JobCard job={exp.TITLE_JOB} company={exp.COMPANY_NAME} description={exp.DESCRIPTION_JOB} />
          </li>
        ))
      }
</ul>