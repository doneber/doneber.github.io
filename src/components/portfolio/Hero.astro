---
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const words = i18n.PORTFOLIO.ROL_NAME.toUpperCase().split(" ");
const maxLength = Math.max(...words.map((word) => word.length));
---

<div>
  <h1>Eber Lopez</h1>
  <h2 style={`--cols: ${maxLength};`}>
    {
      words.map((word, wordIndex) => {
        const emptyCount = maxLength - word.length;
        const leftEmpty = Math.floor(emptyCount / 2);
        const rightEmpty = emptyCount - leftEmpty;

        return (
          <>
            {Array.from({ length: leftEmpty }).map(() => (
              <i />
            ))}
            {word.split("").map((letter) => (
              <span>{letter}</span>
            ))}
            {wordIndex < words.length - 1 &&
              Array.from({ length: rightEmpty }).map(() => <i />)}
          </>
        );
      })
    }
  </h2>
  <p>
    {i18n.PORTFOLIO.SHORT_DESCRIPTION}
  </p>
</div>

<style>
  h1 {
    text-align: center;
  }

  h2 {
    color: var(--primary);
    margin: 0;
    display: grid;
    grid-template-columns: repeat(var(--cols), 1fr);
    gap: 0.5rem 0;
    width: 100%;
  }

  h2 span,
  h2 i {
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: clamp(1.2rem, 4vw, 3.5rem);
    font-weight: 600;
    font-style: normal;
    box-sizing: border-box;
    line-height: 1;
  }

  h2 span {
    border: 1px solid rgb(0, 0, 0, 0.3);
  }

  html.dark h2 span {
    border: 1px solid rgb(255, 255, 255, 0.2);
  }

  p {
    margin-top: 1rem;
    text-align: center;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    h2 span,
    h2 i {
      font-size: clamp(1rem, 4.5vw, 2.8rem);
    }
  }

  @media (max-width: 480px) {
    h2 span,
    h2 i {
      font-size: clamp(0.85rem, 5vw, 2rem);
    }

    h2 span {
      border-width: 0.5px;
    }
  }
</style>
