---
interface Props {
  title: string;
  description: string;
  logoPath: string;
  url: string;
}

import { getI18N } from "@/i18n";

const { title, description, logoPath, url } = Astro.props;
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<article>
  <div class="container-card">
    <div class="logo-container">
      <img
        src={logoPath}
        width="auto"
        height="70"
        alt={`${i18n.COMMON.LOGO_ALT} ${title}`}
      />
    </div>
    <h3 class="title">
      {title}
    </h3>
    <div class="description-container">
      <p class="description">{description}</p>
    </div>
    <footer>
      <a href={url} class="link" target="_blank">{i18n.COMMON.SEE_ONLINE}</a>
    </footer>
  </div>
</article>

<style>
  h3 {
    font-family: monospace;
  }
  article {
    box-shadow: 0px 0px 2px var(--primary);
    border-radius: 7px;
    text-align: center;
    /* max-width: 200px; */
  }

  .container-card {
    display: grid;
    grid-template-rows: 120px 2em 4em 2em;
    padding: 1rem 2rem;
    @media (max-width: 768px) {
      padding: 0.5rem;
    }
  }

  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .title {
    margin: 0;
    font-size: 1.1rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .description-container {
    /* background: green; */
  }
  .description {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.4em;
    text-wrap: balance;
    opacity: 0.8;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* Número de líneas visibles antes de truncar */
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .link {
    color: var(--primary);
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
</style>
