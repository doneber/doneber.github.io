---
import { getI18N } from "@/i18n";
import squareDraw from "@/assets/square-draw.svg";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const projects = i18n.PORTFOLIO.PROJECTS_LIST;
---

<div class="projects box">
    <h2>{i18n.HOME.PROJECTS.TITLE}</h2>
    <div class="project-list">
        {
            projects.map((project) => (
                <a href={project.URL} target="_blank" class="project-item">
                    <img
                        src={project.LOGO_PATH}
                        alt={project.PROJECT_NAME}
                        style={`background-image: url(${squareDraw.src})`}
                    />
                    <span>{project.PROJECT_NAME}</span>
                </a>
            ))
        }
    </div>
    <div class="see-more">
        <a href="/portfolio">{i18n.HOME.PROJECTS.SEE_MORE}</a>
    </div>
</div>

<style>
    .projects h2 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        font-weight: bold;
    }

    .project-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 1rem;
        place-content: center;
        place-items: center;
    }

    .project-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        color: inherit;
        width: 80px;
        text-align: center;
    }

    .project-item img {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        margin-bottom: 0.5rem;
        object-fit: cover;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 7px;
        filter: contrast(1.2);
    }

    .project-item span {
        font-size: 0.8rem;
        font-weight: bold;
        line-height: 1.1;
    }

    @media (width <= 1000px) {
        .project-list {
            gap: 0.1rem;
            margin-bottom: 1rem;
        }
    }
</style>
